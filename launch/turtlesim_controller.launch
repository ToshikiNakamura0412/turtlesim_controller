<?xml version="1.0"?>
<launch>
    <arg name="num_of_sides" default="4"/>
    <arg name="length_of_side" default="1.0"/>

    <node pkg="turtlesim" type="turtlesim_node" name="turtlesim_node"/>
    <node pkg="turtlesim_controller" type="turtlesim_controller_node" name="turtlesim_controller_node" output="screen">
        <param name="num_of_sides" value="$(arg num_of_sides)"/>
        <param name="length_of_side" value="$(arg length_of_side)"/>
        <param name="velocity" value="0.5"/>
        <param name="yawrate" value="0.3"/>
    </node>
</launch>
